<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quizzy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/appTitle"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.061"
            android:textSize="48sp" android:fontFamily="@font/jetbrains_mono_bold" android:textColor="#FFFFFF"/>
    <Button
            android:text="IMPORTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fileimport"
            android:backgroundTint="#c56cff"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.879"
            android:fontFamily="@font/jetbrains_mono_bold" android:textSize="20sp"/>
    <TextView
            android:text="Règle :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rules"
            android:textSize="34sp" android:textColor="#FFFFFF"
            android:fontFamily="@font/jetbrains_mono_light" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="496dp"
            app:layout_constraintTop_toBottomOf="@+id/appTitle" app:layout_constraintVertical_bias="0.542"/>
    <TextView
            android:text="Vous avez 30s pour répondre aux questions."
            android:layout_width="351dp"
            android:layout_height="59dp" android:id="@+id/firstRule"
            android:textColor="#FFFFFF" android:textSize="20sp"
            android:fontFamily="@font/jetbrains_mono_light" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/rules"
            android:layout_marginTop="24dp" app:layout_constraintBottom_toTopOf="@+id/fileimport"
            app:layout_constraintVertical_bias="0.119" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Importer un fichier texte pour commencer le Quiz."
            android:layout_width="350dp"
            android:layout_height="55dp" android:id="@+id/secondRule"
            android:textColor="#FFFFFF" android:textSize="20sp"
            android:fontFamily="@font/jetbrains_mono_light" android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/fileimport"
            app:layout_constraintVertical_bias="0.535" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintTop_toBottomOf="@+id/rules"/>
    <TextView
            android:text="Amusez-vous bien !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/secondRule"
            app:layout_constraintBottom_toTopOf="@+id/fileimport" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/thirdRule" android:textColor="#FFFFFF"
            android:textSize="20sp" android:fontFamily="@font/jetbrains_mono_light"
            app:layout_constraintVertical_bias="0.338"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/retrieve_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.976"/>

</androidx.constraintlayout.widget.ConstraintLayout>