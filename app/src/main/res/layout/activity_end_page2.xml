<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".EndPage">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/scorestats"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintVertical_bias="0.473"
            android:textSize="48sp" android:fontFamily="@font/jetbrains_mono_bold" android:textColor="#FFFFFF"/>
    <Button
            android:text="CLASSEMENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ladder"
            android:backgroundTint="#c56cff"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.89"
            android:fontFamily="@font/jetbrains_mono_bold" android:textSize="20sp"/>
    <TextView
            android:text="Votre score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/score"
            android:textSize="34sp" android:textColor="#FFFFFF"
            android:fontFamily="@font/jetbrains_mono_light"
            app:layout_constraintBottom_toTopOf="@+id/scorestats"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.856"/>
    <TextView
            android:text="Pseudo pour le classement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/ladder" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/thirdRule" android:textColor="#FFFFFF"
            android:textSize="20sp" android:fontFamily="@font/jetbrains_mono_light"
            android:layout_marginBottom="152dp" app:layout_constraintTop_toBottomOf="@+id/scorestats"/>
    <Button
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/retrieve_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.976"
            android:backgroundTint="#c56cff" android:fontFamily="@font/jetbrains_mono_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>